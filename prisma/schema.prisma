generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id                 String   @id @default(uuid()) @db.Uuid
  email              String   @unique
  name               String
  password           String
  role               Role
  resetPasswordToken String?  @map("reset_password_token")
  createdAt          DateTime @default(now()) @map("created_at")

  @@map("users")
}

model RevokedTokens {
  id                String @id @default(uuid()) @db.Uuid
  token             String @unique

  @@map("revoked_tokens")
}
